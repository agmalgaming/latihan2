<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_header_profile"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_notification"
            android:layout_marginLeft="360dp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_side_menu"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myPict"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/agmal"/>
        <TextView
            android:id="@+id/nama1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agung Maulana"
            android:layout_marginTop="200dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/gol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Type : O"
            android:layout_marginTop="225dp"
            android:textAlignment="center"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75"
                android:textSize="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="80dp"
                android:layout_marginStart="70dp"
                android:textColor="@color/blue">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLOOD GIVE"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="59dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="80dp"
                android:layout_marginStart="180dp"
                android:textColor="@color/blue">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLOOD RECEIVED"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="163dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="330"
                android:textSize="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="292dp"
                android:textColor="@color/blue">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THANK"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="299dp"
                android:layout_marginBottom="8dp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/ic_search_donor">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Donor"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="58dp"
                    android:textSize="18dp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search donor near you"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="50dp"
                    android:textSize="12dp">
                </TextView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="240dp"
                    android:background="@drawable/ic_blood_needed">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Needed"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="235dp"
                    android:textSize="18dp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 Users need blood"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="240dp"
                    android:textSize="12dp">
                </TextView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/ic_message">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:layout_marginTop="310dp"
                    android:layout_marginStart="72dp"
                    android:textSize="18dp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 New Messages"
                    android:layout_marginTop="330dp"
                    android:layout_marginStart="60dp"
                    android:textSize="12dp">
                </TextView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="240dp"
                    android:background="@drawable/ic_donor_history">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donor History"
                    android:layout_marginTop="310dp"
                    android:layout_marginStart="235dp"
                    android:textSize="18dp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Give, 2 Received"
                    android:layout_marginTop="330dp"
                    android:layout_marginStart="239dp"
                    android:textSize="12dp">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>